<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red_inactive</item>
        <item name="colorPrimaryDark">@color/red_active</item>
        <item name="colorAccent">@color/orange_active</item>
    </style>

    <declare-styleable name="AppCompatTheme">
        <attr name="selectableItemBackground" format="reference" />
        <attr name="selectableItemBackgroundBorderless" format="reference" />
    </declare-styleable>

    <style name="button_signup">
        <item name="android:text">@string/btn_signUp</item>

        <item name="android:background">@drawable/bg_button_signup</item>
        <item name="android:textSize">@dimen/sp17</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="button_login">
        <item name="android:text">@string/btn_login</item>
        <item name="android:background">@drawable/bg_button_login</item>
        <item name="android:textSize">@dimen/sp17</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="NewDialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
